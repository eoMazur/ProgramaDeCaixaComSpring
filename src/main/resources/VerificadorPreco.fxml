<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pacientes.programadecaixacomspring.controller.VerificadorPrecoController"
      prefHeight="400.0" prefWidth="300.0" alignment="CENTER" spacing="40">

    <HBox alignment="CENTER" spacing="20">
        <Label>Codigo: </Label>
        <TextField fx:id="tf_codigo"/>
        <Button onMouseClicked="#OnButtonBuscarClick">Buscar</Button>
    </HBox>

    <Separator/>

    <Label fx:id="lbl_aviso" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <VBox alignment="CENTER" spacing="30">
        <VBox>
            <Label style="-fx-font-size: 20px;">Descrição
                <VBox.margin>
                    <Insets left="30.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="lbl_descricao" style="-fx-font-size: 28px; -fx-font-weight: bold;">
                <VBox.margin>
                    <Insets left="42.0"/>
                </VBox.margin>
            </Label>
        </VBox>

        <VBox>
            <Label style="-fx-font-size: 20px;">Preço:
                <VBox.margin>
                    <Insets left="30.0"></Insets>
                </VBox.margin>
            </Label>
            <Label fx:id="lbl_preco" style="-fx-font-size: 28px; -fx-font-weight: bold;">
                <VBox.margin>
                    <Insets left="42.0"/>
                </VBox.margin>
            </Label>
        </VBox>
    </VBox>
</VBox>
